{
	"name": "vgdb",
	"displayName": "vGDB",
	"version": "0.1.24",
	"publisher": "penagos",
	"description": "C/C++ Debugging Support for Visual Studio Code",
	"author": {
		"name": "Luis Penagos",
		"email": "luis@penagos.co"
	},
	"license": "MIT",
	"keywords": [
		"GDB",
		"C++",
		"C"
	],
	"icon": "resources/vgdb.png",
	"engines": {
		"vscode": "^1.33.0",
		"node": "^10.15.1"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/penagos/vgdb.git"
	},
	"bugs": {
		"url": "https://github.com/penagos/vgdb/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"vscode-debugadapter": "1.35.0",
		"tail-stream": "0.3.4"
	},
	"devDependencies": {
		"@types/node": "10.12.12",
		"@types/mocha": "5.2.7",
		"typescript": "3.5.3",
		"mocha": "6.2.0",
		"vscode": "1.1.36",
		"vscode-debugadapter-testsupport": "1.35.0",
		"tslint": "5.18.0",
		"vsce": "1.66.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "cpp"
			},
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "vgdb",
				"label": "vGDB: C/C++ Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path of program to debug",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"args": {
								"type": "array",
								"description": "Arguments to pass to inferior",
								"default": []
							},
							"cwd": {
								"type": "string",
								"description": "Working directory of the target",
								"default": "${workspaceFolder}"
							},
							"env": {
								"type": "object",
								"description": "Environment variables to set in debugger shell",
								"default": {}
							},
							"externalConsole": {
								"type": "boolean",
								"description": "If true, debug target will spawn a new terminal window",
								"default": false
							},
							"debugger": {
								"type": "string",
								"description": "Path to GDB executable",
								"default": "gdb"
							},
							"startupCmds": {
								"type": "array",
								"description": "Startup commands to run in GDB",
								"default": []
							}
						}
					},
					"attach": {
						"required": [
							"program"
						],
						"program": {
							"type": "number",
							"description": "PID of program to debug",
							"default": "\\${command:AskForProgramPID}"
						},
						"debugger": {
							"type": "string",
							"description": "Path to GDB executable",
							"default": "gdb"
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "vgdb",
						"request": "launch",
						"name": "C/C++ Debug",
						"program": "${workspaceFolder}/a.out",
						"args": [],
						"cwd": "${workspaceFolder}"
					}
				],
				"configurationSnippets": [
					{
						"label": "vGDB C/C++ Debug: Launch",
						"description": "Start GDB for debugging a C/C++ program",
						"body": {
							"type": "vgdb",
							"request": "launch",
							"name": "C/C++ Debug Launch",
							"program": "${workspaceFolder}/a.out",
							"args": [],
							"cwd": "${workspaceFolder}"
						}
					},
					{
						"label": "vGDB C/C++ Debug: Attach",
						"description": "Attach GDB to running C/C++ program",
						"body": {
							"type": "vgdb",
							"request": "attach",
							"name": "C/C++ Debug Attach",
							"program": "^\"\\${command:AskForProgramPID}\""
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.vgdb.getProgramName",
					"AskForProgramPID": "extension.vgdb.getProgramPID"
				}
			}
		]
	}
}
